<div style="display: @deletePopupVisibility;" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Are you sure you want to remove <b>@Name</b></h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="ClosePopup">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-footer">
          
        <button type="button" class="btn btn-primary" @onclick="DeleteClicked">Add show</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="ClosePopup">Cancel</button>

      </div>
    </div>
  </div>
</div>

@code {

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public string deletePopupVisibility { get; set; } = "none";

    [Parameter]
    public EventCallback onDeleteClicked { get; set; }

    protected async Task DeleteClicked() =>
        await onDeleteClicked.InvokeAsync(Id);

    private void ClosePopup() =>
        deletePopupVisibility = "none";
}
